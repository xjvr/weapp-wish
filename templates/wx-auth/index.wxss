.wxauth-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  justify-content: center;
}

.wxauth-wrapper .container {
  width: 563rpx;
  height: 330rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 18rpx;
  margin-top: 40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.wxauth-wrapper .container .auth-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 22rpx;
}

.wxauth-wrapper .container .auth-tip {
  font-size: 28rpx;
  font-weight: 400;
  color: #999;
  margin-bottom: 36rpx;
}

.wxauth-wrapper .container button {
  width: 372rpx;
  height: 85rpx;
  background: linear-gradient(180deg, rgba(101, 174, 248, 1), rgba(61, 143, 247, 1));
  border-radius: 43rpx;
}

.wxauth-wrapper .container button image {
  width: 42rpx;
  height: 42rpx;
  margin-right: 12rpx;
}

.wxauth-wrapper .container button text {
  font-size: 32rpx;
  font-weight: 400;
  color: #fff;
}
